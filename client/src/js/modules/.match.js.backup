import { createAction, handleActions } from 'redux-actions';
import thunk from 'redux-thunk';

// ACTIONS
const LOAD_MATCHES = 'LOAD_MATCHES';
const LOAD_MORE_MATCHES = 'LOAD_MORE_MATCHES';

// ACTIONS CREATORS
export const loadMatches = createAction(LOAD_MATCHES); // matches
export const loadMoreMatches = createAction(LOAD_MORE_MATCHES); // number of matches

export const loadMatchesAsync = () => (dispatch) => {};

export const loadMoreMatchesAsync = () => (dispatch) => {};

const initialState = {
    matchList: [],
    numberOfMatches: 10,
};

// REDUCERS
export default handleActions(
    {
        [LOAD_MATCHES]: (state, action) => ({ ...state, matchList: action.payload }),
        [LOAD_MORE_MATCHES]: (state, action) => ({ ...state, numberOfMatches: action.payload }),
    },
    initialState,
);

// SELECTORS
export const getNumberOfMatches = state => state.numberOfMatches;
